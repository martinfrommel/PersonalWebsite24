---
import { Image } from "astro:assets";

interface Props {
  title: string;
  href: string;
  description?: string;
  image?: string;
}

const { href, title, description, image, ...props } = Astro.props;
---

<li
  class="min-h-72 w-auto rounded-md bg-dark/20 p-4 backdrop-blur-sm transition-transform duration-200 hover:-translate-y-0.5 dark:bg-light/20"
  {...props}
>
  <a
    href={href}
    class="flex h-full w-full flex-col items-center justify-around hover:border-0"
  >
    <slot name="logo" />
    <h2 class="my-2 font-serif text-2xl">
      {title}
    </h2>
    {description && <small>{description}</small>}
    <p>
      <slot />
    </p>
    {
      image && (
        <Image
          class={"h-48 w-full max-w-md rounded-md object-cover object-center"}
          src={image}
          alt={title}
          inferSize
          loading={"lazy"}
          formats={["auto", "webp"]}
          aria-label={`Image for the ${title} project`}
        />
      )
    }
  </a>
</li>
