---
import { Image } from "astro:assets";

interface Props {
  title: string;
  href: string;
  description?: string;
  image?: string;
}

const { href, title, description, image, ...props } = Astro.props;
---

<li
  class="min-h-72 w-auto rounded-md bg-dark/20 p-4 backdrop-blur-sm transition-transform duration-200 dark:bg-light/20"
  {...props}
>
  <a
    href={href}
    class="flex h-full w-full flex-col items-center justify-around hover:border-0"
  >
    <slot name="logo" />
    <div class="my-2 text-center">
      <h2 class="font-serif text-2xl">
        {title}
      </h2>
      {description && <small>{description}</small>}
    </div>
    <p>
      <slot />
    </p>
    {
      image && (
        <Image
          class={"h-48 w-full max-w-md rounded-md object-cover object-center"}
          src={image}
          alt={title}
          inferSize
          loading={"lazy"}
          decoding={"async"}
          aria-label={`Image for the ${title} project`}
        />
      )
    }
  </a>
</li>
