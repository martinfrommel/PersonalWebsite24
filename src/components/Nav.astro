---
import NavItems from "./NavItems.astro";
---

<div
  class="flex select-none flex-col items-center justify-center"
  x-data="{ show: false }"
>
  <!-- Large Screen -->
  <div
    x-cloak
    x-transition
    class="z-10 hidden max-h-full w-auto flex-none flex-row items-center justify-evenly space-x-6 rounded-lg bg-dark/20 px-8 py-4 backdrop-blur-sm lg:flex sm:portrait:flex dark:bg-light/20"
  >
    <NavItems size={48} />
  </div>

  <!-- Small Screen -->
  <div
    x-cloak
    x-transition
    x-show="show"
    class="absolute bottom-14 z-10 flex w-fit flex-none flex-row items-center justify-evenly space-x-4 rounded-lg bg-dark/20 px-8 py-4 backdrop-blur-sm xl:bottom-24 dark:bg-light/20"
  >
    <NavItems size={32} />
  </div>

  <!-- Hamburger Toggle -->
  <div
    class="rounded-full p-1 transition-all duration-100 active:scale-75 active:bg-dark/20 lg:hidden sm:portrait:hidden active:dark:bg-light/20"
  >
    <svg
      x-cloak
      x-show="show = !show"
      class="hover:cursor-pointer xl:h-12 xl:w-12"
      @click="show = !show"
      xmlns="http://www.w3.org/2000/svg"
      width="2rem"
      height="2rem"
      viewBox="0 0 24 24"
    >
      <path
        fill="currentColor"
        d="M4 6h16v2H4V6zm0 5h16v2H4v-2zm16 5H4v2h16v-2z"></path>
    </svg>
    <svg
      x-cloak
      x-show="show = !show"
      class="hover:cursor-pointer xl:h-12 xl:w-12"
      @click="show = !show"
      xmlns="http://www.w3.org/2000/svg"
      width="2rem"
      height="2rem"
      viewBox="0 0 24 24"
      ><path
        fill="currentColor"
        d="M5 5h2v2H5V5zm4 4H7V7h2v2zm2 2H9V9h2v2zm2 0h-2v2H9v2H7v2H5v2h2v-2h2v-2h2v-2h2v2h2v2h2v2h2v-2h-2v-2h-2v-2h-2v-2zm2-2v2h-2V9h2zm2-2v2h-2V7h2zm0 0V5h2v2h-2z"
      ></path></svg
    >
  </div>
</div>
