---
import "@fontsource-variable/eb-garamond";
import "@fontsource/vt323";

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

import "../base.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  x-cloak
  x-transition
  x-data="{darkMode: $persist(true), init: false}"
  x-init="$nextTick(() => {init = true; })"
  x-bind:class="{'dark': darkMode}"
  lang="en"
>
  <BaseHead title={title} />

  <body
    x-cloak
    class="flex w-full flex-1 flex-col flex-nowrap items-center justify-center overflow-hidden"
  >
    <!-- <Header className=' p-3' /> -->
    <div
      class="flex h-full w-full flex-1 flex-col flex-wrap items-center justify-center px-4 py-4 pb-14 md:px-0 lg:pb-0"
      transition:animate="fade"
    >
      <slot />
    </div>
    <Header
      transition:persist
      className="fixed bottom-0 z-20 flex h-fit w-full flex-none flex-row items-end justify-between bg-light/75 p-2 backdrop-blur-lg dark:bg-dark/75 lg:relative lg:bg-transparent  lg:backdrop-blur-none lg:dark:bg-transparent"
    />

    <!-- AlpineJS plugins -->
    <script
      defer
      is:inline
      src="https://cdn.jsdelivr.net/npm/@alpinejs/persist@3.x.x/dist/cdn.min.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/@alpinejs/focus@3.x.x/dist/cdn.min.js"
    ></script>

    <!-- AlpineJS Core -->
    <script
      defer
      is:inline
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </body>
</html>
